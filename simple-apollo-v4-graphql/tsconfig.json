{
   "compilerOptions": {
     "rootDirs": ["src"],
     "outDir": "dist",
     "lib": ["es2020", "DOM", "DOM.Iterable"],
     "target": "es2020",
     "module": "esnext",
     "moduleResolution": "node",
     "esModuleInterop": true,
     "types": ["node"],
     "strict": true,
      "typeRoots": ["node_modules/@types"],
      "sourceMap": true,
      "skipLibCheck": true
   },
   "ts-node": {
      "esm": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist", "src/dev/register.js"],
 }