{
  "name": "simple-apollo-v4-graphql",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "nodemon": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "build:start": "npm run build && node dist/index.js",
    "build": "rm -rf dist && tsc && npm run copy-graphql",
    "copy-graphql": "copyfiles -u 1 src/**/*.graphql dist/",
    "start": "cd dist && node index.js",
    "generate": "rm src/schema.generated.graphql src/resolvers.generated.ts && graphql-codegen",
    "test": "vitest"
  },
  "keywords": [],
  "author": "Hairyblue",
  "license": "ISC",
  "description": "A simple journey to apollo graphql",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.0.24",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "my-shared-graphql": "file:../shared-graphql",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.14.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
